<div id="topicContent">

            <div class="row justify-content-md-center">
                <div class="col-1" style="margin:auto;">
                    <i class="fas fa-chevron-left fa-3x"></i>
                </div>
                <div class="col-10">

                    <div class="row justify-content-md-center">
                        <div class="col-md-11 mb-4">
                            <p class="card-text"><img src='/happytail/img/foot.png' class="card-img"
						alt="..." style="height: 60px; width: 80px;">
                                <span>{{username}}</span></p>
                        </div>
                        <div class="col align-self-end">
                            <i class="fas fa-times fa-2x mb-5" onclick="closeTopicContentDialog()"></i>
                        </div>
                    </div>

                    <div class="row justify-content-md-center" style="height: 100px; text-align:center;">
                        <div class="col-md-12">
                            <h2 class="card-title">{{title}}</h2>
                        </div>
                    </div>

                    <div class="row justify-content-md-center">
                        <div class="col-2 align-self-start">
                            <span>{{ category }}</span>
                        </div>
                        <div class="col-2">
                            <span>{{createDate}}</span>
                        </div>
                        <div class="col-md-8">
                        </div>
                    </div>

                    <div class="row justify-content-md-center mb-5 mt-5" >
                        <div class="col-md-12">
                            {{{content}}}
                        </div>
                    </div>

                    <div class="row justify-content-md-center" style="height: 80px">
                        <div class=" col-md-4">
                            <i class="fas fa-thumbs-up fa-2x"></i>
                            <i class="far fa-laugh-squint fa-2x"></i>
                            <i class="far fa-sad-cry fa-2x"></i>
                            <i class="far fa-surprise fa-2x"></i>
                            <i class="fas fa-heart fa-2x"></i>
                            <i class="far fa-angry fa-2x"></i>
                            <span>{{ likeNum }}</span>
                        </div>



                        <div class="col-md-4">
                            <i class="far fa-comment-dots fa-2x"></i>
                            <span>{{ replyNum }}</span>
                        </div>

                        <div class="col-md-1">
                            <i class="{{#isThumbsUp}}fas checked{{/isThumbsUp}} {{^isThumbsUp}} far{{/isThumbsUp}} fa-heart fa-2x" onclick="clickTopicThumbsUp({{ topicId }}, this)"></i>
                        </div>

                        <div class="col-md-1">
                            <i class="{{#isFollowed}} fas checked {{/isFollowed}}{{^isFollowed}} far{{/isFollowed}} fa-bookmark fa-2x" onclick="clickTopicFollowed({{ topicId }},this)"></i>
                        </div>

                        <div class="col-md-1">
                            <i class="fas fa-share fa-2x" onclick="shareLine()"></i>
                        </div>

                        <div class="col-md-1">
                            <i class="fas fa-exclamation-triangle fa-2x" onclick="openAddReportDialog({{ topicId }}, this)"></i>
                        </div>
                    </div>

                    <div class="row justify-content-md-center">
                        <div class="col-md-1">
                            <i class="fas fa-paw fa-2x"></i>
                        </div>

                        <div class="col-md-11">
       						<form id="addReplyForm">
                         	   <input type="text" class="form-control" name="replyContent" placeholder="Reply Here.....">
                         		<input type="hidden" name="username" />
                         		<input type="hidden" name="userId" />
                         		<input type="hidden" name="topicId" value="{{topicId}}"/>
                         </form> 
                        </div>
                        <button type="button" class="btn btn-primary" onclick="clickAddReply()">送出</button>
                        

                    </div>

                </div>
                <div class="col-1" style="margin:auto;">
                    <i class="fas fa-chevron-right fa-3x"></i>
                </div>
            </div>
</div>
